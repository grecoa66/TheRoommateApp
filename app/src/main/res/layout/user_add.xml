<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent" android:layout_height="fill_parent"       android:background="#ffffff">

    <EditText android:layout_width="fill_parent"
        android:layout_gravity="center" android:layout_height="wrap_content"
        android:hint="First Name" android:id="@+id/firstName" android:textColor="#000000"
        android:lines="1" />
    <EditText android:layout_width="fill_parent"
        android:layout_gravity="center" android:layout_height="wrap_content"
        android:hint="Last Name" android:id="@+id/lastName" android:textColor="#000000"
        android:lines="1" />

    <EditText android:layout_width="fill_parent"
        android:layout_gravity="center" android:layout_height="wrap_content"
        android:hint="Email" android:id="@+id/email" android:textColor="#000000"
        android:lines="1" />

    <EditText android:layout_width="fill_parent"
        android:layout_gravity="center" android:layout_height="wrap_content"
        android:hint="Phone Number" android:id="@+id/phoneNum" android:textColor="#000000"
        android:lines="1" />
</LinearLayout>